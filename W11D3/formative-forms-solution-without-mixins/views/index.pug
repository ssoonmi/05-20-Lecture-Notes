extends layout

block content
  h2 Existing Users
  br
  table.table
    thead
      tr
        th(scope='col') id
        th(scope='col') First Name
        th(scope='col') Last Name
        th(scope='col') Email
        th(scope='col') Age
        th(scope='col') Favorite Beatle
        th(scope='col') Likes Ice Cream
    tbody
      each user in users
        tr
          td(scope='row') #{user.id}
          td #{user.firstName}
          td #{user.lastName}
          td #{user.email}
          td= user.age
          td= user.favoriteBeatle
          td= user.iceCream